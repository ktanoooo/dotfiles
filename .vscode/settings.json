{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "editor.renderWhitespace": "all",
  "editor.formatOnType": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.minimap.enabled": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "smart",
  "explorer.confirmDelete": false,
  "ruby.intellisense": "rubyLocate",
  "ruby.useLanguageServer": true,
  "sync.removeExtensions": true,
  "sync.gist": "64c36f34cc7d698ea19fddf7bc753fa5",
  "explorer.confirmDragAndDrop": false,
  "files.exclude": {
    "**/.git": false
  },
  "editor.wordWrap": "on",
  "prettier.prettierPath": "/usr/local/lib/node_modules/prettier",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "security.workspace.trust.untrustedFiles": "newWindow",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.formatOnSave": true,
  "window.zoomLevel": -1,
  "workbench.colorTheme": "Nord",
  "workbench.iconTheme": "vscode-icons",
  // https://php-mania.com/memo/48
  "workbench.colorCustomizations": {
    "editorLineNumber.foreground": "#556e57",
    "sideBar.foreground": "#77aca1"
  },
  // https://gist.github.com/junagao/f785ed77589246a3d063273b3a56f114
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic
          // search scope
          // ctrl + shift + p => developer: Inspect Editor Tokens and Scopes
          "text.log",
          "text.html.erb",
          "text.html.markdown",
          "source.css",
          "source.js",
          "source.tf",
          "source.ts",
          "source.jsx",
          "source.tsx",
          "source.ruby",
          "source.rust",
          "source.scss",
          "source.html",
          "source.json",
          "source.yaml",
          "source.shell",
          "source.ignore",
          "source.groovy",
          "source.dockerfile",
          "source.powershell",
          "source.json.comments",
          "entity.other.inherited-class.module.first.ruby"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "bracket-pair-colorizer-2.depreciation-notice": false,
  // https://github.com/redhat-developer/vscode-yaml/issues/397#issuecomment-896049900
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow": "/.github/workflows/**/*.yml"
  }
}
